@model OnScapeMovieTicketing.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1 class="mt-5 pt-5 sub-heading">Create Movie</h1>
        <div class="row-fluid d-flex align-items-end mb-4">
          <div
            class="left-line col-5 col-sm-4 col-md-3 col-lg-2 col-xl-2"
          ></div>
          <div class="right-line"></div>
        </div>
    <div class="col-12">
        <form asp-action="Create" enctype="multipart/form-data" autocomplete="off" class="form col-12 m-0 p-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-0 col-12">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control col-12" onchange="document.getElementById('ImgPrv').src=window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="image-preview mt-3">
                        <img id="ImgPrv" src="~/Uploads/no-image.png" class="px-3 py-2" alt="Select Image" width="150" height="150" style="border:1px solid var(--l-blue);"/>
                    </div>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="ShowStartDate" class="control-label"></label>
                <input asp-for="ShowStartDate" class="form-control col-12" />
                <span asp-validation-for="ShowStartDate" class="text-danger"></span>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="ShowEndDate" class="control-label"></label>
                <input asp-for="ShowEndDate" class="form-control col-12" />
                <span asp-validation-for="ShowEndDate" class="text-danger"></span>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control col-12" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="Synopsis" class="control-label"></label>
                <input asp-for="Synopsis" class="form-control col-12" />
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="Casts" class="control-label"></label>
                <input asp-for="Casts" class="form-control col-12" />
                <span asp-validation-for="Casts" class="text-danger"></span>
            </div>
            <div class="form-group p-0 col-12">
                <label asp-for="Director" class="control-label"></label>
                <input asp-for="Director" class="form-control col-12" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-lg button btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
